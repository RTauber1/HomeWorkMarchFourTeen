@using HomeWorkMarchFourTeen.Data;
@model IndexViewModelSimcha
    <div class="container">
        <main role="main" class="pb-3" style="margin-top: 60px;">

            <div class="header">
                <h1>Simchas</h1>
            </div>
            <div class="row header">
                <div class="col-md-4">
                    <button class="btn btn btn-danger" id="new-simcha">New Simcha</button>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Contributions</th>
                        <th>Simcha Name</th>
                        <th>Contributor Count</th>
                        <th>Total</th>
                        <th>Date</th>
                    </tr>
                    @foreach (Simcha s in Model.ListOfSimcha)
                    {
                    <tr>
                        <td>
                            <a class="btn btn-primary" href="/Simcha/contributions?simchaid=@s.Id">Contributions</a>
                        </td>
                        <td>@s.Name</td>
                        <td>
                            @s.ContributorsCountToThisOne / @s.ContributorsCountTotal
                        </td>
                        <td>$@s.Total</td>
                        <td>@s.Date</td>
                    </tr>
                    }
                </table>
            </div>
            <div class="modal fade dialog-box" tabindex="-1" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">New Simcha</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form method="POST" action="/Simcha/newSimcha">
                                <div class="form-group">
                                    <label>Simcha Name</label>
                                    <input class="form-control" name="Name" placeholder="Simcha Name" type="text">
                                </div>
                                <div class="form-group">
                                    <label>Date</label>
                                    <input type="date" name="Date" class="form-control" id="datepicker">
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <button class="btn btn-primary" name="commit">Save</button>
                                </div>
                            </form>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
