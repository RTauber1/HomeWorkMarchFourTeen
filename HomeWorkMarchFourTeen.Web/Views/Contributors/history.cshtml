@using HomeWorkMarchFourTeen.Data
@model HistoryViewModel
    <div class="container">
        <main role="main" class="pb-3" style="margin-top: 60px;">

            <div class="header">
                <h1>History for @Model.Name</h1>
                <h3>Current Balance: $@Model.Balance</h3>
            </div>
            
            <div class="row header">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <tr>
                            <th>Action</th>
                            <th>Date</th>
                            <th>Amount</th>
                        </tr>
                        @foreach (History h in Model.ListOfHistory)
                        {
                            <tr>
                                <td>
                                    @h.Auction
                                </td>
                                <td style="text-align: center; vertical-align: middle;">
                                    @h.Date
                                </td>
                                <td style="text-align: center; vertical-align: middle;">
                                    @h.Amount
                                </td>
                            </tr>
                        @*</table>*@
                @*</div>*@
            @*</div>*@
            }
            <div style="text-align:center;">
                <a class="btn-lg btn-danger" href="/contributors">Back to Contributors</a>
            </div>
        </main>
